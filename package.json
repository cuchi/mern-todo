{
  "name": "mern-todo",
  "version": "0.0.0",
  "description": "Sample To-Do app using the MERN stack.",
  "main": "./src/app.js",
  "scripts": {
    "start": "babel-node ./server/server.js",
    "build": "babel ./server -d ./dist",
    "production": "node ./dist/server.js",
    "test": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuchi/mern-todo.git"
  },
  "author": "Paulo Henrique Cuchi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cuchi/mern-todo/issues"
  },
  "homepage": "https://github.com/cuchi/mern-todo#readme",
  "dependencies": {
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "mongoose": "^4.5.8",
    "morgan": "^1.7.0",
    "passport": "^0.3.2"
  },
  "devDependencies": {
    "xo": "^0.16.0",
    "babel-cli": "~6.11.4",
    "babel-preset-stage-2": "~6.13.0",
    "babel-preset-es2015": "~6.13.2"
  },
  "xo": {
    "esnext": true,
    "space": 4,
    "rules": {
      "xo/no-process-exit": [
        "off"
      ],
      "babel/object-curly-spacing": [
        "error",
        "always"
      ]
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
